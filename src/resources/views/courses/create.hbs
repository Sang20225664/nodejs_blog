<div class="mt-4">
    <h3>Thêm khóa học</h3>
    
    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name" class="form-label">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter course name">
        </div>
        <div class="form-group">
            <label for="description" class="form-label">Mô tả</label>
            <input type="text" class="form-control" id="description" name="description" placeholder="Enter description">
        </div>
        <div class="form-group">
            <label for="videoID" class="form-label">Video ID</label>
            <input type="text" class="form-control" id="videoID" name="videoID" placeholder="Enter video ID">
        </div>
        <div class="form-group">
            <label for="level" class="form-label">Trình độ</label>
            <input type="text" class="form-control" id="level" name="level" placeholder="Enter level">
        </div>
        <button type="submit" class="btn btn-primary">Create Course</button>
    </form>
</div>